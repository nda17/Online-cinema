{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"types": ["node"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": "./src/",
		"paths": {
			"@/components/*": ["components/*"],
			"@/app/*": ["app/*"],
			"@/ui/*": ["components/ui/*"],
			"@/screens/*": ["components/screens/*"],
			"@/shared/*": ["shared/*"],
			"@/hooks/*": ["hooks/*"],
			"@/providers/*": ["providers/*"],
			"@/services/*": ["services/*"],
			"@/utils/*": ["utils/*"],
			"@/assets/*": ["assets/*"],
			"@/configs/*": ["configs/*"],
			"@/store/*": ["store/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/types/app/layout.ts",
		".next/types/app/page.ts"
	],
	"exclude": ["node_modules"]
}
